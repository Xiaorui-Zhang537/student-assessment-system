<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.noncore.assessment.mapper.ReportMapper">

    <resultMap id="ReportResultMap" type="com.noncore.assessment.entity.Report">
        <id property="id" column="id"/>
        <result property="reporterId" column="reporter_id"/>
        <result property="reportedStudentId" column="reported_student_id"/>
        <result property="courseId" column="course_id"/>
        <result property="assignmentId" column="assignment_id"/>
        <result property="submissionId" column="submission_id"/>
        <result property="reason" column="reason"/>
        <result property="details" column="details"/>
        <result property="evidenceFileId" column="evidence_file_id"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.noncore.assessment.entity.Report" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO reports (reporter_id, reported_student_id, course_id, assignment_id, submission_id,
                             reason, details, evidence_file_id, status, created_at, updated_at)
        VALUES (#{reporterId}, #{reportedStudentId}, #{courseId}, #{assignmentId}, #{submissionId},
                #{reason}, #{details}, #{evidenceFileId}, #{status}, NOW(), NOW())
    </insert>

    <select id="selectById" resultMap="ReportResultMap">
        SELECT * FROM reports WHERE id = #{id}
    </select>

    <update id="updateStatus">
        UPDATE reports SET status = #{status}, updated_at = NOW() WHERE id = #{id}
    </update>

    <select id="page" resultMap="ReportResultMap">
        SELECT * FROM reports
        <where>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM reports
        <where>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
        </where>
    </select>

</mapper>


